{
  "name": "testpilot-contribute",
  "description": "A minisite aggregating open bugs suitable for first-time contributors across Test Pilot's various projects and repositories.",
  "version": "0.9.0",
  "author": "Mozilla (https://mozilla.org/)",
  "homepage": "https://testpilot-contribute.herokuapp.com",
  "license": "MPL-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chuckharmston/testpilot-contribute.git"
  },
  "bugs": {
    "url": "https://github.com/chuckharmston/testpilot-contribute/issues"
  },
  "engines": {
    "node": "7.8.x",
    "npm": "4.2.x"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "github-api": "^3.0.0",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.4",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "react-router-redux": "next",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1",
    "scroll-js": "^1.7.1",
    "urijs": "^1.18.10"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.21.0",
    "babel-eslint": "7.2.3",
    "eslint": "4.4.1",
    "eslint-plugin-react": "7.1.0",
    "lint-staged": "^3.4.1",
    "node-sass": "^4.5.2",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.2.2",
    "react-scripts": "0.9.5",
    "storybook-router": "^0.1.2"
  },
  "scripts": {
    "start": "npm-run-all -p watch-css start-js",
    "start-js": "react-scripts start",
    "build": "npm run build-css && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "build-css": "node-sass src/ -o src/",
    "watch-css": "npm run build-css && node-sass src/ -o src/ --watch --recursive",
    "lint": "eslint .",
    "precommit": "lint-staged",
    "prettier": "prettier --single-quote --write 'src/**/*.js'"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --write",
      "eslint",
      "git add"
    ]
  }
}
